        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_pic"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_pic"
        android:supportsRtl="false"
        android:requestLegacyExternalStorage="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme"

        android:largeHeap="true"
        android:hardwareAccelerated="false"
        tools:replace="android:supportsRtl,android:icon">

        <meta-data
            android:name="AA_DB_NAME"
            android:value="hcip.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="2" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.example.hcp.models.hcp.divisionn,com.example.hcp.models.hcp.districtt,com.example.hcp.models.hcp.tehsill,com.example.hcp.models.hcp.occuptaionn,com.example.hcp.models.hcp.materialStatuss,com.example.hcp.models.hcp.qualificationn,com.example.hcp.models.hcp.healthFacilityy,com.example.hcp.models.hcp.userdataaa,com.example.hcp.models.hcp.addPatientModel,com.example.hcp.models.hcp.vitalListt,com.example.hcp.models.hcp.addvitalll,com.example.hcp.models.hcp.Assessmentt,com.example.hcp.models.hcp.Samplee,com.example.hcp.models.hcp.medicinee" />
        <provider android:name="com.activeandroid.content.ContentProvider"
            android:authorities="com.example.hcp"
            android:enabled="true"
            android:exported="false" />

        <provider
            android:name=".database.DBProvider"
            android:authorities="com.example.hcp"
            android:exported="false" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.hcp.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>

        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">

        </activity>


        <activity android:name=".activities.LoginActivity"  android:screenOrientation="portrait"/>
        <activity android:name=".activities.SplashActivity"  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"  />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>