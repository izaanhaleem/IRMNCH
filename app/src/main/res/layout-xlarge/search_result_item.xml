<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/familyCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="@string/MRN_NO"
                android:layout_weight="1.3"
                android:textColor="@color/colorPrimaryDark"
                android:textDirection="rtl"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/cardFamilyMrNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:layout_gravity="center"
                android:gravity="start"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="@string/MRN_NO"
                android:textColor="@color/color_black"
                android:textDirection="rtl"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="@string/Address"
                android:layout_weight="1.3"
                android:textColor="@color/colorPrimaryDark"
                android:textDirection="rtl"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView

                android:id="@+id/cardFamilyAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:layout_weight="1.7"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="@string/Address"
                android:textColor="@color/color_black"
                android:textDirection="rtl"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.3"
                android:gravity="start"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="سربراہ کا نام"
                android:textColor="@color/colorPrimaryDark"
                android:textDirection="rtl"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cardLeaderName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:layout_weight="1.7"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="@string/NAME"
                android:textColor="@color/color_black"
                android:textDirection="rtl"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.3"
                android:gravity="start"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="@string/Leader_CNIC"
                android:textColor="@color/colorPrimaryDark"
                android:textDirection="rtl"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cardLeaderCNIC"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:layout_weight="1.7"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="@string/NAME"
                android:textColor="@color/color_black"
                android:textDirection="rtl"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/cardFamilyMembersbtn"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginVertical="@dimen/margin_small_1"
            android:background="@color/colorPrimary"
            android:paddingHorizontal="15dp"
            android:text="@string/family_members"
            android:textColor="@color/color_white"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.cardview.widget.CardView>