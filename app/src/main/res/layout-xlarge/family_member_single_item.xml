<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/memberCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            >
            <Button
                android:layout_gravity="left"
                android:layout_width="30dp"
                android:id="@+id/sMedicalProfile"
                android:layout_height="30dp"
                android:background="@drawable/medicalprofile"
                />
            <Button
                android:layout_gravity="left"
                android:layout_width="30dp"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/sKidMedicalProfile"
                android:layout_height="30dp"
                android:background="@drawable/medicalprofile"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="@string/NAME1"
                android:layout_weight="1.3"
                android:textColor="@color/colorPrimaryDark"
                android:textDirection="rtl"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/memberName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:layout_gravity="center"
                android:gravity="start"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="@string/NAME1"
                android:textColor="@color/color_black"
                android:textDirection="rtl"
                android:textSize="14sp"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.3"
                android:gravity="start"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="@string/GENDER"
                android:textColor="@color/colorPrimaryDark"
                android:textDirection="rtl"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/memberGender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:layout_weight="1.7"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="@string/GENDER"
                android:textColor="@color/color_black"
                android:textDirection="rtl"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="@string/CNIC"
                android:layout_weight="1.3"
                android:textColor="@color/colorPrimaryDark"
                android:textDirection="rtl"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView

                android:id="@+id/memberCNIC"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:layout_weight="1.7"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="@string/CNIC"
                android:textColor="@color/color_black"
                android:textDirection="rtl"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.3"
                android:gravity="start"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="@string/Relation_with_Leader"
                android:textColor="@color/colorPrimaryDark"
                android:textDirection="rtl"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/memberRelationWithLeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:layout_weight="1.7"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="@string/Relation_with_Leader"
                android:textColor="@color/color_black"
                android:textDirection="rtl"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.3"
                android:gravity="start"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="@string/maritalStatus"
                android:textColor="@color/colorPrimaryDark"
                android:textDirection="rtl"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/memberMaritalStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:layout_weight="1.7"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="@string/maritalStatus"
                android:textColor="@color/color_black"
                android:textDirection="rtl"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.3"
                android:gravity="start"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="@string/AGE"
                android:textColor="@color/colorPrimaryDark"
                android:textDirection="rtl"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/memberAge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:layout_weight="1.7"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="@string/AGE"
                android:textColor="@color/color_black"
                android:textDirection="rtl"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sMemberDelete"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_margin="10dp"
                android:paddingHorizontal="10dp"
                android:layout_weight="1"

                android:text="حذف کریں"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sMemberEdit"
                android:layout_margin="10dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:paddingHorizontal="10dp"
                android:layout_weight="1"
                android:text="ترمیم کریں"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
