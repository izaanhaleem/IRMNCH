                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch10"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:switchPadding="0dp"
                        android:layout_marginTop="10dp"
                        android:text="Dental Intervention : " >
                    </androidx.appcompat.widget.SwitchCompat>
                    <Spinner
                        android:visibility="gone"
                        android:id="@+id/Dental_Clinic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        android:background="@drawable/dropdown_custom_bg"
                        android:paddingVertical="13dp"
                        android:spinnerMode="dropdown"
                        android:textSize="@dimen/font_xlarge"
                        android:gravity="center"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch11"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:switchPadding="0dp"
                        android:layout_marginTop="10dp"
                        android:text="History of Multiple Sex Partners : " >
                    </androidx.appcompat.widget.SwitchCompat>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch12"
                        android:textSize="17sp"
