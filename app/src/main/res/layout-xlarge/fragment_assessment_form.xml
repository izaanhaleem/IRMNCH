                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Confirmed case of STDs : "
                        android:layout_marginTop="10dp"
                        app:switchPadding="0dp">
                    </androidx.appcompat.widget.SwitchCompat>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch3"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:switchPadding="0dp"
                        android:layout_marginTop="10dp"
                        android:text="Invasive medical and surgical Intervention : " >
                    </androidx.appcompat.widget.SwitchCompat>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/three"
                        android:visibility="gone">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

                            app:hintTextAppearance="@style/NormalTextView">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/surgery_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_xsmall"
                                android:inputType="text"
                                android:hint="Surgery Type"
                                android:maxLength="30"
                                android:maxLines="1"
                                android:textSize="@dimen/font_normal" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="When"
                            android:textSize="16sp"
                            android:textStyle="normal" />
                        <Spinner
                            android:id="@+id/sergery_select_year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="3dp"
                            android:background="@drawable/dropdown_custom_bg"
                            android:paddingVertical="13dp"
                            android:spinnerMode="dropdown"
                            android:textSize="@dimen/font_xlarge"
                            android:gravity="center"/>
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch4"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:switchPadding="0dp"
                        android:layout_marginTop="10dp"
                        android:text="Close contact of a known case of HCV/HBV : " >
                    </androidx.appcompat.widget.SwitchCompat>
                    <Spinner
                        android:visibility="gone"
                        android:id="@+id/two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        android:background="@drawable/dropdown_custom_bg"
                        android:paddingVertical="13dp"
                        android:spinnerMode="dropdown"
                        android:textSize="@dimen/font_xlarge"
                        android:gravity="center"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch5"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        app:switchPadding="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:text="Blood transfusion : " >
                    </androidx.appcompat.widget.SwitchCompat>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/five">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="When"
