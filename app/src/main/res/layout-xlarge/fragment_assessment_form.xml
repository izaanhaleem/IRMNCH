                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SCREENING, VACCINATION AND COUNSELLING"
                    android:gravity="center_horizontal"
                    android:textStyle="normal"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:background="#364150">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_marginTop="10dp">
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch28"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:switchPadding="0dp"
                            android:text="HBV : "
                            android:textSize="17sp"
                            android:layout_weight="0.5">
                        </androidx.appcompat.widget.SwitchCompat>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch29"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:switchPadding="0dp"
                            android:text="HCV : "
                            android:textSize="17sp"
                            android:layout_weight="0.5">
                        </androidx.appcompat.widget.SwitchCompat>
                    </LinearLayout>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/addvised"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Addvised for Both"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch27"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:switchPadding="0dp"
                        android:text="Screening Recommended : "
                        android:textSize="17sp"
                        android:layout_marginTop="10dp"
                        android:checked="true"
                        android:clickable="false">
                    </androidx.appcompat.widget.SwitchCompat>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/pcr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:switchPadding="0dp"
                        android:text="PCR : "
                        android:checked="true"
                        android:clickable="false"
                        android:textSize="17sp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone">
                    </androidx.appcompat.widget.SwitchCompat>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:switchPadding="0dp"
                        android:text="Vaccination Administered : "
                        android:textSize="17sp"
                        android:layout_marginTop="10dp">
                    </androidx.appcompat.widget.SwitchCompat>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch31"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:switchPadding="0dp"
                        android:text="Counselling : "
                        android:textSize="17sp"
                        android:layout_marginTop="10dp">
                    </androidx.appcompat.widget.SwitchCompat>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:hintTextAppearance="@style/NormalTextView">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/MO_Notes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_xsmall"
                            android:inputType="text"
                            android:hint="MO Notes"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:textSize="@dimen/font_normal"/>
                    </com.google.android.material.textfield.TextInputLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Further Action: "
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:layout_weight="0.5"/>

                        <TextView
                            android:id="@+id/counsel_closed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Counsel and Closed"
                            android:textSize="17sp"
                            android:layout_weight="0.5"/>
                    </LinearLayout>

                </LinearLayout>
                <Button
                    android:id="@+id/addAssessment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="10dp"
                    android:text="Add"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@drawable/buttonstyle"
                    tools:spb_showStripes="true"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
