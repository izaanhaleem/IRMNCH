                        android:text="Truck Driver : " >
                    </androidx.appcompat.widget.SwitchCompat>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch13"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:switchPadding="0dp"
