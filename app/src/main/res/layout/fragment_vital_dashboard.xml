    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        app:cardCornerRadius="@dimen/margin_normal"
        android:id="@+id/card"
        android:layout_below="@+id/sy">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Add  Vital"
                android:textColor="@color/color_black"
                android:paddingTop="10dp"
                android:textStyle="bold"
                android:paddingBottom="5dp"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/etSearchOptionvital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:background="@drawable/dropdown_custom_bg"
                android:drawableLeft="@drawable/dropdown_btn"
                android:spinnerMode="dialog"
                android:paddingVertical="10dp"
                android:textAlignment="textStart"
                android:gravity="center_horizontal"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/vitalSearchVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="@string/user_name"
                android:hint="XXXXXXXXXXXXXXXX"
                android:background="@drawable/textfield_design"
                android:inputType="text"
                android:padding="5dp"
                android:textSize="14sp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:weightSum="1">
                <Button
                    android:id="@+id/btnSearch"
                    style="@style/ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:background="@color/colorPrimary"
                    android:text="@string/Family_Search"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_white" />

                <Button
                    android:visibility="visible"
                    android:id="@+id/allpatientList"
                    style="@style/ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:background="@color/colorPrimary"
                    android:text="All Patient List"
                    android:textColor="@color/color_white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

