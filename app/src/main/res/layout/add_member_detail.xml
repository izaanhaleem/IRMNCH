                            android:id="@+id/sSingle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:buttonTint="@color/color_black"
                            android:checked="false"
                            android:text="@string/Single"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/sMarried"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:buttonTint="@color/color_black"
                            android:text="@string/Married"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/sDivorced"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:buttonTint="@color/color_black"
                            android:text="@string/Divorced"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/sWidowed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:buttonTint="@color/color_black"
                            android:text="@string/widowed"
                            android:textSize="14sp" />
                    </RadioGroup>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llImageSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layoutDirection="rtl"
                    android:orientation="vertical">




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:text="@string/Language"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        />

                        <Spinner
                            android:id="@+id/sLanguage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/dropdown_custom_bg"
                            android:hint="@string/language"
                            android:inputType="text"
                            android:layoutDirection="rtl"
                            android:maxLength="50"
                            android:spinnerMode="dialog"
                            android:paddingVertical="10dp"
                            android:textAlignment="textStart"
                            android:textColorHint="@color/colorPrimary"
                            android:textDirection="rtl"
                            android:textSize="14sp" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/other_language_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:visibility="gone"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/other_language"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textSize="14sp"
                            android:hint="زبان درج کریں"
                            />

                    </com.google.android.material.textfield.TextInputLayout>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/Remarks"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/sRemarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="################"
                        android:inputType="text"
                        android:layoutDirection="rtl"
                        android:maxLength="500"
                        android:textDirection="rtl"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/sbtnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_large"
                    android:layout_marginBottom="@dimen/margin_large"
                    android:background="@color/colorPrimaryDark"
                    android:paddingHorizontal="15dp"
                    android:text="@string/Save"
                    android:textColor="@color/colorPrimaryWhite"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>