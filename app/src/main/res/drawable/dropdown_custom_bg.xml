<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/blue_100" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/colorPrimaryDark" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/transparent" />
                    <stroke android:width="0.5dp" android:color="@color/colorPrimaryDark" />
                    <corners android:radius="3dp" />
                    <padding android:left="5dp"/>
                    <padding android:right="5dp"/>
                </shape>
            </item>

            <item android:gravity="right">
                <bitmap android:antialias="true"  android:gravity="left" android:src="@drawable/arrow_down" android:tint="@color/colorPrimaryDark" />
            </item>
        </layer-list>
    </item>
</selector>